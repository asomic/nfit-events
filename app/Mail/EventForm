<?php

namespace App\Mail;

use Illuminate\Bus\Queueable;
use Illuminate\Contracts\Queue\ShouldQueue;
use Illuminate\Mail\Mailable;
use Illuminate\Queue\SerializesModels;

class EventForm extends Mailable
{
    use Queueable, SerializesModels;

    protected $data;
    public $country;

    /**
     *  Indicates if this email is sended from system or tenant
     *
     *  @var  string  systen|tenant
     */
    public $mode;

    /**
     * Create a new message instance.
     *
     * @return void
     */
    public function __construct($request, $country)
    {
        $this->data = $request;
        $this->country = $country;
        $this->mode = 'system';
    }


    /**
     * Build the message.
     *
     * @return $this
     */
    public function build()
    {
        return $this->markdown('email')
            ->subject('Nuevo contacto desde evento: ' . $this->data->event)
            ->with([
                'event' => $this->data->event,	
                'name' => $this->data->name,
                'email' => $this->data->email,
                'phone' => $this->data->prefix.' '.$this->data->phone,
                'box_center_name' => $this->data->box_center_name,
                'country' => $this->country->name,
                'city' => $this->data->city,
                'students' => $this->data->students,

            ]);
    }
}